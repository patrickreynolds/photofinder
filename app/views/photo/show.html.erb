<div class="container">
	<% if @finalListOfImageLinks.empty? %>
		<div class="alert alert-warning">Sorry, no photos were found at <%= @url %></div>
	<% else %>
		<div class="alert alert-success alert_notification"><%= @finalListOfImageLinks.count %> photos found.</div>
		<% @finalListOfImageLinks.each do |link| %>
			<div class="row col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading wrap_text"><b>Image Link #<%= @counter %>:</b> <%= link %></div>
					<div class="photo-container">
						<a href="<%= link %>"><img src="<%= link %>" class="img-responsive" alt="Responsive image"></a>
					</div>
				</div>
			</div>
			<% @counter = @counter + 1 %>
		<% end %>
		<% @counter = 0 %>
	<% end %>
</div>